# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "volume master"
order += "tztime local"

tztime local {
        #format = "%d.%m.%y %H:%M:%S"
        format = "%H:%M:%S"
}

volume master {
        format = "vol: %volume"
        format_muted = "muted: %volume"
        device = "pulse:1"
}

