general {
	colors = false
	interval = 1
}

order += "volume master"
order += "time"

time {
	format = "%a %b %d %H:%M:%S"
}

volume master {
	format = "vol %volume"
	format_muted = "muted %volume"
	device = "pulse:0"
}

